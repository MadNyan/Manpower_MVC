<script>
    $(function () {
        // 幫 #menu li 加上 hover 事件
        $('.sidebar-menu li').click(function () {
            var _this = $(this),
                _subnav = _this.children('ul');
            if (_subnav.hasClass('open')) {
                _this.removeClass('active');
            } else {
                _this.addClass('active');
            }
        });

        // 取消超連結的虛線框
        $('a').focus(function () {
            this.blur();
        });
    });
</script>
