
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登入</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/icheck/blue.min.css" rel="stylesheet">
    @Styles.Render("~/Bundles/css")
    <style>
        .container {
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
            position: relative;
        }
    </style>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <h2>註冊 全域人力管理系統</h2>
        <h3></h3>
        <form id="form" method="post" action='@Url.Action("Register", "User")'>
            <div>
                <div class='form-group'>
                    <label for='acc'>帳號</label>
                    <input type='text' class='form-control' id='Account' name='Account' required='required' />
                </div>
                <div class='form-group'>
                    <label for='pwd'>密碼</label>
                    <input type='password' class='form-control' id='Password' name='Password' required='required' />
                </div>
                <div class='form-group'>
                    <label for='name'>姓名</label>
                    <input type='text' class='form-control' id='Name' name='Name' required='required' />
                </div>
                <div class='form-group'>
                    <a href='@Url.Action("Login", "User")'>已經註冊了？來這登入吧！</a>
                </div>
            </div>
            <div class="pull-left">
                <a href='@Url.Action("Index", "Home")' role="button" class="btn btn-default btn-flat">回主頁</a>
            </div>
            <div class="pull-right">
                <input id='submit' type='submit' class='btn btn-primary btn-flat' value='註冊' />
            </div>
        </form>
    </div>
</body>
</html>
