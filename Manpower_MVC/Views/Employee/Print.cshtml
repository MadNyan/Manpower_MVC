@model IEnumerable<Manpower_MVC.Models.Employee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>點工人員一覽表</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/icheck/blue.min.css" rel="stylesheet">
    @Styles.Render("~/Bundles/css")
</head>
<body onload="window.print(); window.close();">
    <div style="text-align:center; font-weight:bolder;">
        <p>
            <h4>點工人員一覽表</h4>
        </p>
    </div>
    <div style="font-size:xx-small;text-align :left;">
        <table class="table table-striped" style="width:100%">
            <tr>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.EmpID)
                </td>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.EmpName)
                </td>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.Tel)
                </td>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.Phone)
                </td>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.ConPerson)
                </td>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.ConPersonTel)
                </td>
                <td style="border-bottom: 1px solid black">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConPerson)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConPersonTel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
