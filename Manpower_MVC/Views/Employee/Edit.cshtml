        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="更新" class="btn btn-success" />
                <input type="button" value="取消" class="btn btn-default" onclick="location.replace('@Url.Action("Index")')" />
            </div>
        </div>
    </div>
</form>
