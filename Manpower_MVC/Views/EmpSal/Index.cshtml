@model IEnumerable<Manpower_MVC.ViewModels.ViewEmpSal>

@{
    ViewBag.Title = "員工薪資";
}

<h4>員工薪資列表</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpName)
        </th>
        <th>
            月份
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)年 @Html.DisplayFor(modelItem => item.Month)月
        </td>
        <td>
            @Html.ActionLink("員工薪資細項", "EmpSalDetail", new {id = item.ID , year = item.Year , month = item.Month })
        </td>
    </tr>
}

</table>
