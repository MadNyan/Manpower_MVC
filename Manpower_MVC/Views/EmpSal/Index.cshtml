@model IEnumerable<Manpower_MVC.ViewModels.ViewEmpSal>

@{
    ViewBag.Title = "員工薪資";
}

<h4>員工薪資列表</h4>

<form method="get" target="_blank" action="@Url.Action("Print")">
    <p>
        <input type="month" name="date" id="date" value="" />
    </p>
    <p>
        <input type="submit" value="列印月份總表" class="btn btn-success" name="print" id="print" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpName)
        </th>
        <th>
            月份
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)年 @Html.DisplayFor(modelItem => item.Month)月
        </td>
        <td>
            @Html.ActionLink("員工薪資細項", "EmpSalDetail", new {id = item.ID , year = item.Year , month = item.Month })
        </td>
    </tr>
}

</table>

<script>
    var date = new Date();

    var month = date.getMonth() + 1;
    var year = date.getFullYear();

    if (month < 10) month = "0" + month;

    var today = year + "-" + month;
    document.getElementById("date").value = today;
</script>